        // Navigation
        const navBtns = document.querySelectorAll('.nav-btn');
        const sections = document.querySelectorAll('.section');

        navBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                const sectionId = btn.dataset.section;
                
                navBtns.forEach(b => b.classList.remove('active'));
                btn.classList.add('active');
                
                // Also update mobile nav
                document.querySelectorAll(`.nav-btn[data-section="${sectionId}"]`).forEach(b => b.classList.add('active'));
                
                sections.forEach(s => s.classList.remove('active'));
                document.getElementById(sectionId).classList.add('active');
            });
        });

        // Render chamber seats visualization
        function renderSeats(containerId, total, composition) {
            const container = document.getElementById(containerId);
            container.innerHTML = '';
            
            let seatIndex = 0;
            for (const [party, count] of Object.entries(composition)) {
                for (let i = 0; i < count; i++) {
                    const seat = document.createElement('div');
                    seat.className = `seat ${party}`;
                    seat.title = party.charAt(0).toUpperCase() + party.slice(1);
                    seat.style.animationDelay = `${seatIndex * 2}ms`;
                    container.appendChild(seat);
                    seatIndex++;
                }
            }
        }

        // Initialize seat visualizations (approximate current composition)
        renderSeats('house-seats', 435, { dem: 213, rep: 220, vacant: 2 });
        renderSeats('senate-seats', 100, { dem: 47, rep: 49, ind: 4 });

        // Populate state dropdown
        const stateSelect = document.getElementById('state-select');
        stateData.forEach(state => {
            const option = document.createElement('option');
            option.value = state.abbr;
            option.textContent = state.name;
            stateSelect.appendChild(option);
        });

        // State lookup
        stateSelect.addEventListener('change', () => {
            const state = stateData.find(s => s.abbr === stateSelect.value);
            const resultDiv = document.getElementById('state-result');
            
            if (state) {
                document.getElementById('state-name').textContent = state.name;
                document.getElementById('state-house-seats').textContent = state.seats;
                document.getElementById('state-total').textContent = state.seats + 2;
                document.getElementById('state-electoral').textContent = state.seats + 2;
                resultDiv.classList.add('visible');
            } else {
                resultDiv.classList.remove('visible');
            }
        });

        // Population calculator
        const populationInput = document.getElementById('population-input');
        const calcResult = document.getElementById('calc-result');

        populationInput.addEventListener('input', (e) => {
            const value = e.target.value.replace(/[^0-9]/g, '');
            const population = parseInt(value) || 0;
            
            // Format with commas
            e.target.value = population.toLocaleString();
            
            // Calculate estimated seats (simplified - real apportionment uses Huntington-Hill method)
            const avgPeoplePerRep = 760000;
            let seats = Math.round(population / avgPeoplePerRep);
            seats = Math.max(1, seats); // Minimum 1 seat per state
            
            calcResult.textContent = seats;
        });

        // Quiz functionality
        let currentQuestion = 0;
        let score = 0;
        let answered = false;

        function initQuiz() {
            currentQuestion = 0;
            score = 0;
            answered = false;
            
            // Reset progress dots
            const progressContainer = document.getElementById('quiz-progress');
            progressContainer.innerHTML = '';
            quizQuestions.forEach((_, i) => {
                const dot = document.createElement('div');
                dot.className = 'quiz-progress-dot' + (i === 0 ? ' active' : '');
                progressContainer.appendChild(dot);
            });
            
            document.getElementById('quiz-content').style.display = 'block';
            document.getElementById('quiz-score').style.display = 'none';
            
            showQuestion();
        }

        function showQuestion() {
            const q = quizQuestions[currentQuestion];
            document.getElementById('quiz-question').textContent = q.question;
            
            const optionsContainer = document.getElementById('quiz-options');
            optionsContainer.innerHTML = '';
            
            q.options.forEach((option, i) => {
                const optionEl = document.createElement('div');
                optionEl.className = 'quiz-option';
                optionEl.textContent = option;
                optionEl.addEventListener('click', () => selectAnswer(i));
                optionsContainer.appendChild(optionEl);
            });
            
            document.getElementById('quiz-feedback').classList.remove('visible', 'correct', 'incorrect');
            document.getElementById('quiz-btn').disabled = true;
            document.getElementById('quiz-btn').textContent = currentQuestion < quizQuestions.length - 1 ? 'Next Question' : 'See Results';
            answered = false;
        }

        function selectAnswer(index) {
            if (answered) return;
            answered = true;
            
            const q = quizQuestions[currentQuestion];
            const options = document.querySelectorAll('.quiz-option');
            const feedback = document.getElementById('quiz-feedback');
            const progressDots = document.querySelectorAll('.quiz-progress-dot');
            
            options.forEach((opt, i) => {
                opt.classList.add('disabled');
                if (i === q.correct) {
                    opt.classList.add('correct');
                } else if (i === index && index !== q.correct) {
                    opt.classList.add('incorrect');
                }
            });
            
            if (index === q.correct) {
                score++;
                feedback.textContent = `‚úì Correct! ${q.explanation}`;
                feedback.classList.add('correct');
                progressDots[currentQuestion].classList.add('correct');
            } else {
                feedback.textContent = `‚úó Not quite. ${q.explanation}`;
                feedback.classList.add('incorrect');
                progressDots[currentQuestion].classList.add('incorrect');
            }
            
            feedback.classList.add('visible');
            document.getElementById('quiz-btn').disabled = false;
        }

        document.getElementById('quiz-btn').addEventListener('click', () => {
            currentQuestion++;
            
            if (currentQuestion < quizQuestions.length) {
                const progressDots = document.querySelectorAll('.quiz-progress-dot');
                progressDots.forEach((dot, i) => {
                    dot.classList.toggle('active', i === currentQuestion);
                });
                showQuestion();
            } else {
                // Show results
                document.getElementById('quiz-content').style.display = 'none';
                document.getElementById('quiz-score').style.display = 'block';
                document.getElementById('final-score').textContent = `${score}/${quizQuestions.length}`;
            }
        });

        document.getElementById('restart-quiz').addEventListener('click', initQuiz);

        // Initialize quiz on page load
        initQuiz();
    </script>
</body>
