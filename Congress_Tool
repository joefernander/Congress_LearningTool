        // Quiz questions
        const quizQuestions = [
            {
                question: "How many total voting members are in the U.S. House of Representatives?",
                options: ["100", "435", "535", "350"],
                correct: 1,
                explanation: "The House has 435 voting members, apportioned among states based on population."
            },
            {
                question: "How many senators does each state have?",
                options: ["1", "2", "Varies by population", "3"],
                correct: 1,
